<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.slideshow.SlideshowFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="INSERTAR TAREA"
        android:textColor="@color/purple_700"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        />
    <TableLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MATERIA"
            android:textSize="30dp"
            />
          <EditText
              android:layout_width="270dp"
              android:layout_height="match_parent"
              android:hint="Escribe la materia"
              android:id="@+id/editMa"
              />
        </TableRow>
        <TableRow android:layout_marginVertical="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HORA "
                android:textSize="30dp"
                />
            <EditText
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:hint="Escribe la hora de esntrega"
                android:id="@+id/editHo"
                />
        </TableRow>
        <TableRow android:layout_marginVertical="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAREA "
                android:textSize="30dp"
                />
            <EditText
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:hint="Describe la tarea dejada "
                android:id="@+id/editDes"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSERTAR"
        android:textSize="25dp"
        android:id="@+id/insertar"
        android:layout_marginStart="100dp"
        android:layout_marginVertical="25dp"
        />
</LinearLayout>